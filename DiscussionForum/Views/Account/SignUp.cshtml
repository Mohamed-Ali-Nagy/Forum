@model SignUpVM
@{
    ViewData["Title"] = "SignUp";
}

<h1>SignUp</h1>
<div class="col-xl-6 pxp-column pxp-is-light">
    <div class="pxp-sign-hero-form pb-100 pt-100">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-xl-7 col-xxl-5">
                <div class="pxp-sign-hero-form-content">

                    <form asp-action="SignUp" class="mt-4">
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Name" class="form-control" id="pxp-signin-page-email" placeholder="Email address">
                            <label asp-for="@Model.Name">Full Name</label>
                            <span asp-validation-for="@Model.Name" class="fa fa-envelope-o"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Email" class="form-control" id="pxp-signin-page-email" placeholder="Email address">
                            <label asp-for="@Model.Email">Email address</label>
                            <span asp-validation-for="@Model.Email" class="fa fa-envelope-o"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.UserName" class="form-control" id="pxp-signin-page-email" placeholder="Email address">
                            <label asp-for="@Model.UserName">UserName</label>
                            <span asp-validation-for="@Model.UserName" class="fa fa-envelope-o"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Password" class="form-control" id="pxp-signin-page-email" placeholder="Email address">
                            <label asp-for="@Model.Password">Password</label>
                            <span asp-validation-for="@Model.Password" ></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.ConfirmPassword" class="form-control" id="pxp-signin-page-email" placeholder="Email address">
                            <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="@Model.ConfirmPassword" ></span>
                        </div>
                        <div>
                            <input type="submit" value="sign up"/>
                        </div>
           @*              
                       
                        <div class="mt-4 text-center pxp-sign-hero-form-small">
                            <a href="#" class="pxp-modal-link">Forgot password</a>
                        </div>
                        <div class="mt-4 text-center pxp-sign-hero-form-small">
                            New to Jobster? <a href="sign-up.html">Create an account</a>
                        </div> *@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
