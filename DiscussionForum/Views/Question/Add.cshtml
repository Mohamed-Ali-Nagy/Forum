@model QuestionRequestVM
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>
<form asp-action="Add" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="@Model.Content" class="form-label">Enter the question</label>
        <textarea asp-for="@Model.Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ask</button>
</form>
